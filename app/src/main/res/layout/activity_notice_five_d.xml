<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".NoticeFiveD">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="डी.सी.आर.ता."
                android:textAlignment="center"
                android:background="@android:color/holo_red_dark"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="25dp"
                ></TextView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="दिनांक -"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="68dp"
                    android:id="@+id/t1"
                    android:layout_marginRight="10dp"
                    android:hint="दिनांक"
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="गु.र. नं.-"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="78dp"
                    android:id="@+id/t2"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="गु.र.नं."
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="स.नं. - "></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="78dp"
                    android:id="@+id/t3"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="स.नं."
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="गु.घडला ता.वे ठिकाण - "></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="74dp"
                    android:id="@+id/t4"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="वे"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="74dp"
                    android:id="@+id/t5"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="ठिकाण"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="दिशा व अंतर-"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/t6"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="दक्षिणेस एक किमी "
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="प्रभारी अधिकारी -"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/t7"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="प्रभारी अधिकारी "
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="भेट देणारे अधिकारी-"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/t8"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="भेट देणारे अधिकारी"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/holo_green_dark"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Submit"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginRight="30dp"
                    android:text="Submit"
                    ></Button>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_dark"
                    android:id="@+id/back1"
                    android:text="Back"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>