<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeSix">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evacuation Notice "
                android:textAlignment="center"
                android:background="@android:color/holo_red_dark"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="25dp"
                ></TextView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="जा.क्र. बीपी/प्र.क्र"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/t1"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:text="जा.क्र. बीपी / ? / प्र.क्र. ? / ? / २०२०"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="दिनांक -"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="64dp"
                    android:id="@+id/t2"
                    android:layout_marginRight="10dp"
                    android:hint="दिनांक"
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="इकडील नोटीस - "></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/t3"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="क्र. बीपी/बोपखेल/प्र.क्र.०४/०६/२०२० "
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="गाव -"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="78dp"
                    android:id="@+id/t4"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="गाव"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="मोजे -"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="80dp"
                    android:id="@+id/t5"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="मोजे"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="स.नं.-"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="78dp"
                    android:id="@+id/t6"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="स.नं."
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="सूचना पोहोचविल्यापासून -"></TextView>

                <EditText
                    android:layout_width="50dp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/t7"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>

                <Spinner
                    android:layout_width="160dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/t8"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></Spinner>

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:text="अंदाजे मोजमाप -"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="क्षेत्रिय कार्यालय -"></TextView>

                <Spinner
                    android:layout_width="230dp"
                    android:layout_marginLeft="52dp"
                    android:id="@+id/t9"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></Spinner>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/holo_green_dark"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Submit"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginRight="30dp"
                    android:text="Submit"
                    ></Button>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_dark"
                    android:id="@+id/back"
                    android:text="Exit"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>